{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:vue/vue3-recommended"
    ],
    "rules": {
        "vue/require-default-prop": "off",
        "vue/multi-word-component-names": "off"
    },
    "globals": {
        "computed": true,
        "defineEmits": true,
        "defineProps": true,
        "Inertia": true,
        "inject": true,
        "onBeforeUnmount": true,
        "onBeforeUpdate": true,
        "onMounted": true,
        "onUnmounted": true,
        "provide": true,
        "reactive": true,
        "ref": true,
        "watch": true,
        "useAttrs": true,
        "useForm": true,
        "usePage": true
    },
    "ignorePatterns": [
        "node_modules/**/*",
        "vendor/**/*"
    ]
}
